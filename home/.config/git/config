[user]
	name = giginet
	email = giginet.net@gmail.com
[color]
	status = auto
	diff   = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = true
[push]
	default = simple
[status]
	ignoreSubmodules = dirty
[core]
	quotepath = false
	editor = nvim
	autocrlf = false
	untrackedCache = true
[pull]
	rebase = true
[submodule]
	recurse = true
[rebase]
	autosquash = true
	autostash = true
[alias]
	br = branch --sort=-committerdate
	st = !"tig status"
	ci = commit
	co = checkout
	cp = cherry-pick
	discard = reset --hard HEAD
	sw = switch -c
	pbcopy = !printf "$1" | pbcopy
	delete-merged = !"git branch --merged | grep -v '*' | xargs -I % git branch -d %"
	force-push = "push --force-with-lease"
	gsub = !"f() { git grep -l \"$1\" | xargs sed -i '' -e \"s/$1/$2/g\"; }; f"
	browse = !"gh browse"
	browse-pr = !"gh pr view --web"
	# .tigrc can't treat `#`.
	browse-from-tig = !"f() { gh browse -- \"blob/${3:-master}/$1#L$2\"; }; f"
	revive = !"f() { git log --oneline -1 --format=%h -- $1 | xargs -I{} git restore -s {}^ $1; }; f"
[github]
	user = giginet
[hub]
	protocol = ssh
[ghq]
	root = ~/.ghq
[include]
	path = ~/.config/git/config.local
[rerere]
	enabled = true
[url "git@github.com:"]
	pushinsteadof = "https://github.com/"
	pushinsteadof = "git://github.com/"
[includeIf "gitdir:~/.ghq/github.com/"]
	path = ~/.config/git/config.public
[includeIf "gitdir:~/.homesick/repos/castle"]
	path = ~/.config/git/config.public
[includeIf "gitdir:~/.ghq/github.com/line/"]
	path = ~/.config/git/config.work
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
