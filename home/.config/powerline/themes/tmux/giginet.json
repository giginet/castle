{
  "top_theme": "powerline",
  "segments": {
    "left": [
      {
        "function": "powerline.segments.common.env.cwd",
        "priority": 1,
        "args": {
          "dir_limit_depth": 2,
          "use_path_separator": true
        }
      },
      {
        "function": "powerline.segments.common.vcs.branch",
        "priority": 1
      }
    ],
    "right": [
      {
        "function": "powerline.segments.common.players.itunes",
        "priority": 3,
        "name": "player",
        "args": {
          "format": "{state_symbol}  {title}"
        }
      },
      {
        "function": "powerline.segments.common.bat.battery",
        "priority": 5
      },
      {
        "function": "powerline.segments.common.wthr.weather",
        "priority": 4,
        "args": {
          "unit": "C",
          "icons": {
            "tornado":                 "🌪",
            "hurricane":               "🌀",
            "showers":                 "☔",
            "scattered_showers":       "☔",
            "thunderstorms":           "🌩",
            "isolated_thunderstorms":  "🌩",
            "scattered_thunderstorms": "🌩",
            "dust":                    "🌫",
            "fog":                     "🌫",
            "cold":                    "❄",
            "partly_cloudy_day":       "🌤",
            "mostly_cloudy_day":       "🌥",
            "sun":                     "🌣",
            "hot":                     "♨",
            "day":                     "☀",
            "blustery":                "⚑",
            "rainy":                   "☂",
            "cloudy":                  "☁",
            "snowy":                   "☃",
            "stormy":                  "☈",
            "foggy":                   "🌁",
            "sunny":                   "🌣",
            "night":                   "☾",
            "windy":                   "☴",
            "not_available":           "�",
            "unknown":                 "⚠"
          },
          "location_query": "tokyo,japan"
        }
      },
      {
        "function": "powerline.segments.common.time.date",
        "priority": 5
      },
      {
        "function": "powerline.segments.common.time.date",
        "priority": 1,
        "name": "time",
        "args": {
          "format": "%H:%M",
          "istime": true
        }
      }
    ]
  }
}
