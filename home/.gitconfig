[user]
	name = giginet
	email = giginet.net@gmail.com
[color]
	status = auto
	diff   = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = true
[push]
	default = simple
[core]
	quotepath = false
	editor = nvim
	autocrlf = false
[pull]
	rebase = true
[alias]
	br = branch --sort=-committerdate
	st = !"tig status"
	ci = commit
	co = checkout
	cp = cherry-pick
	discard = reset --hard HEAD
	sw = switch -c
	pbcopy = !printf "$1" | pbcopy
	delete-merged = !"git branch --merged | grep -v '*' | xargs -I % git branch -d %"
	search-pr = "!f() { hub browse -- `git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1 | cut -f5 -d' ' | sed -e 's%#%pull/%'`; }; f"
	force-push = "push --force-with-lease"
	pretty-log = !"git log --oneline -n 100 | emojify"
	gsub = !"f() { git grep -l \"$1\" | xargs sed -i '' -e \"s/$1/$2/g\"; }; f"
	browse-pr = !"f() { hub browse -- \"pull/`git rev-parse --abbrev-ref HEAD`\"; }; f"
	# .tigrc can't treat `#`.
	browse-from-tig = !"f() { hub browse -- \"blob/${3:-master}/$1#L$2\"; }; f"
	revive = !"f() { git log --oneline -1 --format=%h -- $1 | xargs -I{} git restore -s {}^ $1; }; f"
[github]
	user = giginet
[hub]
	protocol = ssh
[ghi]
	token = !security find-internet-password -a giginet -s github.com -l 'ghi token' -w
[ghq]
	root = ~/.ghq
[include]
	path = ~/.gitconfig.local
[rerere]
	enabled = true
[url "git@github.com:"]
	pushinsteadof = "https://github.com/"
	pushinsteadof = "git://github.com/"
[includeIf "gitdir:~/.ghq/github.com/"]
	path = ~/.gitconfig.public
[includeIf "gitdir:~/.homesick/repos/"]
	path = ~/.gitconfig.public
[includeIf "gitdir:~/.ghq/github.com/line/"]
	path = ~/.gitconfig.work
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
