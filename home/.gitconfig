[user]
	name = giginet
	email = giginet.net@gmail.com
[color]
	status = auto
	diff   = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = true
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
	quotepath = false
	editor = nvim
[pull]
	rebase = true
[alias]
	br = branch --sort=-committerdate
	st = !"tig status"
	ci = commit
	co = checkout --recurse-submodules
	cp = cherry-pick
	discard = reset --hard HEAD
	sw = switch -c
	fork = !"gh repo fork"
	pbcopy = !printf "$1" | pbcopy
	browse = !"gh repo view -w"
	delete-merged = !"git branch --merged | grep -v '*' | xargs -I % git branch -d %"
	search-pr = "!f() { gh pr view -w `git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1 | cut -f5 -d' ' | sed -e 's%#%%'`; }; f"
	force-push = "push --force-with-lease"
	pretty-log = !"git log --oneline -n 100 | emojify"
	gsub = !"f() { git grep -l \"$1\" | xargs sed -i '' -e \"s/$1/$2/g\"; }; f"
	browse-pr = !"gh pr view -w"
[github]
	user = giginet
[ghi]
	token = !security find-internet-password -a giginet -s github.com -l 'ghi token' -w
[ghq]
	root = ~/.ghq
[include]
	path = ~/.gitconfig.local
[rerere]
	enabled = true
[url "git@github.com:"]
	pushinsteadof = "https://github.com/"
	pushinsteadof = "git://github.com/"
[includeIf "gitdir:~/.ghq/github.com/"]
	path = ~/.gitconfig.public
[includeIf "gitdir:~/.ghq/github.com/[Cc]ookpad/"]
	path = ~/.gitconfig.work
[init]
	defaultBranch = main
