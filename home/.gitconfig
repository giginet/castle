[user]
	name = giginet
	email = giginet.net@gmail.com
[color]
	status = auto
	diff   = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = true
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
	quotepath = false
[alias]
	br = branch
	st = !"tig status"
	lg = !"tig"
	bl = !"tig blame"
	sh = !"tig show"
	ci = commit
	co = checkout
	cp = cherry-pick
	discard = reset --hard HEAD
	sw = checkout -b
	diff = diff --color-words
	shorten = !"sh -c 'curl -i http://git.io/ -F url=$1 `[ -n \"$2\" ] && echo -F code=$2`' -"
	pbcopy = !printf "$1" | pbcopy
	lg = !"tig"
	pr = pull-request
	delete-merged = !"git branch --merged | grep -v '*' | xargs -I % git branch -d %"
[github]
	user = giginet
[gitlab]
	url = http://gitlab.kawaz.org
[hub]
	protocol = ssh
[ghi]
	token = !security find-internet-password -a giginet -s github.com -l 'ghi token' -w
[include]
	path = ~/.gitconfig.local
[ghq]
	root = /Users/giginet/.ghq
