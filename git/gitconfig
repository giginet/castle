[core]
	excludesfile = ~/.gitignore
[alias]
	a = add -A
	b = branch
	st = status
	ci = commit -a
	co = checkout
	sw = checkout -b
	di = diff --color-words
	shorten = !"sh -c 'curl -i http://git.io/ -F url=$1 `[ -n \"$2\" ] && echo -F code=$2`' -"
	lg = !"tig"
